{
    "printWidth": 100,           
    "tabWidth": 2,               
    "useTabs": false,            
    "semi": true,                
    "singleQuote": true,         
    "trailingComma": "all",      
    "bracketSpacing": true,      
    "arrowParens": "always",     
    "endOfLine": "lf",           
    "jsxSingleQuote": false,     
    "proseWrap": "preserve",     
    "overrides": [
      {
        "files": ["*.json", "*.yml"],
        "options": {
          "printWidth": 80
        }
      }
    ]
  }
  